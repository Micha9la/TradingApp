@page "/landingpage"
@inject NavigationManager Navigation

<h1>Welcome to the Trading App</h1>

<p>Select an action to get started:</p>

<div class="d-flex flex-column align-items-center gap-3 mt-4">
    <button class="btn btn-success btn-lg w-75" @onclick="() => NavigateToForm(true)">Offer</button>
    <button class="btn btn-primary btn-lg w-75" @onclick="() => NavigateToForm(false)">Demand</button>
    <button class="btn btn-secondary btn-lg w-75" @onclick="NavigateToMenu">Menu</button>
</div>

@code {
    private void NavigateToForm(bool isOffer)
    {
        Navigation.NavigateTo($"/tradeform/{isOffer}");
    }

    private void NavigateToMenu()
    {
        Navigation.NavigateTo("/menu");
    }
}


