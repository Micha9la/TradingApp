@page "/landingpage"
@inject NavigationManager Navigation
@using MudBlazor


<MudButton Variant="Variant.Filled" Size="Size.Large" Color="Color.Primary" Style="background-color: cadetblue; color: white; width: 400px; height: 120px;" FullWidth="true"
           OnClick="@(() => Navigation.NavigateTo("/trade-wizard/Offer"))">
    Offer
</MudButton>

<MudButton Variant="Variant.Filled" Size="Size.Large" Color="Color.Secondary" Style="background-color: yellow; color: black; width: 400px; height: 120px;" FullWidth="true"
           OnClick="@(() => Navigation.NavigateTo("/trade-wizard/Demand"))">
    Demand
</MudButton>

<MudButton Variant="Variant.Filled" Size="Size.Large" Color="Color.Success" Style="background-color: forestgreen; color: white; width: 400px; height: 120px;" FullWidth="true"
           OnClick="@(() => Navigation.NavigateTo("/trades"))">
    Trading Table
</MudButton>

@code {
    private void NavigateToTrades()
    {
        Navigation.NavigateTo("/trades");
    }

    private void GoToWizard(TradeDirectionType dir)
    {
        var value = (int)dir;
        Navigation.NavigateTo(("/"));
    }

}



