@page "/landingpage"
@inject NavigationManager Navigation
@using MudBlazor

    <MudButton Variant="Variant.Filled" Size="Size.Large" StartIcon="@Icons.Material.Filled.AddCircle" Color="Color.Primary" FullWidth="true"
               OnClick="@(() => Navigation.NavigateTo("/trade-wizard/0"))">
        Offer
    </MudButton>

    <MudButton Variant="Variant.Filled" Size="Size.Large" EndIcon="@Icons.Material.Filled.Send" Color="Color.Secondary" FullWidth="true"
               OnClick="@(() => Navigation.NavigateTo("/trade-wizard/1"))">
        Demand
    </MudButton>

    <MudButton Variant="Variant.Filled" Size="Size.Large" StartIcon="@Icons.Material.Filled.TableView" Color="Color.Success" FullWidth="true"
               OnClick="@(() => Navigation.NavigateTo("/trades"))">
        Trading Table
    </MudButton>


@code {
    private void NavigateToTrades()
    {
        Navigation.NavigateTo("/trades");
    }

    private void GoToWizard(TradeDirectionType dir)
    {
        var value = (int)dir;
        Navigation.NavigateTo(("/"));
    }

}



