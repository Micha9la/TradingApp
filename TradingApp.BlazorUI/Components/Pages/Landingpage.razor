@page "/landingpage"
@inject NavigationManager Navigation

<h1>Welcome to the Trading App</h1>

<p>Select an action to get started:</p>

<div class="d-flex flex-column align-items-center gap-3 mt-4">
    <button @onclick="() => GoToWizard(TradeDirectionType.Offer)">Create Offer</button>
    <button @onclick="() => GoToWizard(TradeDirectionType.Demand)">Create Demand</button>
    <button class="btn btn-secondary btn-lg w-75" @onclick="NavigateToMenu">Menu</button>
</div>

@code {
    private void NavigateToMenu()
    {
        Navigation.NavigateTo("/menu");
    }

    private void GoToWizard(TradeDirectionType dir)
    {
        var value = (int)dir;
        Navigation.NavigateTo(("/"));
    }

}



