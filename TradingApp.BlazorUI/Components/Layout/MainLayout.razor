@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />


<MudLayout>    
    <MudDrawer @bind-Open="_open"
               Variant="DrawerVariant.Responsive"
               Elevation="1"
               Color="Color.Surface"
               Anchor="Anchor.Left">
        <MudNavMenu>
            <MyNavMenu />
                
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _open = true;

    private void ToggleDrawer() => _open = !_open;
}


